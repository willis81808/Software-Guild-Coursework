@model CarDealership.Models.CarModel

@{
    ViewBag.Title = "Vehicle Details";
}

<style>
    .featured-star {
        position: absolute;
        right: 0;
        top: 0;
        width: 50px;
        margin: 15px;
    }
</style>

<h2>Vehicle Details</h2>

<div class="container">
    <div class="card card-body" style="margin-top:10px">
        @if (Model.Featured)
        {
            <img src="~/Content/img/star.png" title="featured" alt="featured" class="featured-star" />
        }
        <h3>@Model.Year @Model.Make @Model.Model</h3>
        <div class="d-flex">
            <img src="~/Content/img/large_car_black.png" style="height:96px" />
            <div class="container">
                <div class="row">
                    <div class="col-sm">Body Style: @Model.Body</div>
                    <div class="col-sm">Interior: @Model.InteriorColor @Model.Interior</div>
                    <div class="col-sm">Sale Price: $@Model.Price</div>
                </div>
                <div class="row">
                    <div class="col-sm">Transmission: @Model.Transmission</div>
                    <div class="col-sm">Mileage: @(Model.Mileage == 0 ? "NEW" : $"{Model.Mileage} miles")</div>
                    <div class="col-sm">MSRP: $@Model.MSRP</div>
                </div>
                <div class="row">
                    <div class="col-sm">Color: @Model.CarColor</div>
                    <div class="col-sm">VIN: @Model.VIN</div>
                    <div class="col-sm"></div>
                </div>
            </div>
        </div>
        <div class="d-flex">
            <div class="row">
                <div class="col-sm" style="max-width:175px; text-align:right">Description:</div>
                <div class="col-sm">@Model.Description</div>
            </div>
        </div>
        @Html.ActionLink("Contact us", "Contact", "Home", new { vin = Model.VIN }, new { @class = "btn btn-success", style = "margin-top:25px" })
    </div>
</div>