@model CarDealership.Models.InventoryReportViewModel

@{
    ViewBag.Title = "Admin - Inventory Report";
}

<h2>Inventory Report</h2>

<div class="container" style="margin-top:25px">
    <h4>New Vehicles</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Year</th>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Count</th>
                <th scope="col">Stock Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.NewStock)
            {
                <tr>
                    <td>@car.Year</td>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Count</td>
                    <td>$@car.StockValue</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Used</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Year</th>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Count</th>
                <th scope="col">Stock Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.UsedStock)
            {
                <tr>
                    <td>@car.Year</td>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Count</td>
                    <td>$@car.StockValue</td>
                </tr>
            }
        </tbody>
    </table>
</div>