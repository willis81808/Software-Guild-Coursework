@model IEnumerable<CarDealership.Models.UserViewModel>

@{
    ViewBag.Title = "Admin - Users";
}

<p class="text-warning">@ViewBag.Message</p>

<h2>Users</h2>

@Html.ActionLink("[ Add User ]", "AddUser", "Admin", null, new { @class = "text-success" })

<div class="container d-flex" style="margin-top:25px">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th scope="col">Role</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@(user.Roles.FirstOrDefault() ?? "No Role")</td>
                    <td>@Html.ActionLink("Edit", "EditUser", "Admin", new { id = user.UserId }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>